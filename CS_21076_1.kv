#:set w dp(700)
#:set h dp(540)

IntroWindow:


<IntroWindow>:
    name: "intro"

    canvas.before:
        Color:
            rgba: .9, .9, .9, .3
        Rectangle:
            size: self.size

    MDLabel:
        id: intro_title_label
        text: "E A S Y    S H O P"
        font_name: "time_new_romans.ttf"
        font_size: 90
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .8}

    MDGridLayout:
        cols: 1
        spacing: "15dp"
        size_hint: None, None
        size: "200dp", "100dp"
        pos_hint: {"center_x": .5, "center_y": .3}

        MDRectangleFlatButton:
            id: intro_customer_button
            text: "Enter as Customer"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"
            on_release: app.root.current = "cus_login"

        MDRectangleFlatButton:
            id: intro_admin_button
            text: "Enter as Administrator"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"