CustomerProfileWindow:


<CustomerProfileWindow>:
    grid: grid
    ScrollView:
        MDGridLayout:
            cols: 1
            padding: dp(20)
            spacing: dp(20)
            row_force_default: True
            row_default_height: 40
            size_hint_y: None
            height: self.minimum_height
            id: grid
            MDLabel:
                text: "Customer Profile"
                halign: "center"
                font_name: "time_new_romans.ttf"
                font_size: 35